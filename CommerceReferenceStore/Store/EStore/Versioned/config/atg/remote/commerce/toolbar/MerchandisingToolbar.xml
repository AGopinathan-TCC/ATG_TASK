<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE browse-hierarchy
  PUBLIC "-//Art Technology Group, Inc.//DTD Asset Manager Browse Hierarchy//EN"
  'http://www.atg.com/dtds/toolbar/toolbar_1.0.dtd'>

<toolbar xml-combine="append">

  <!-- Toolbar customisations for the CRS-defined items in Merchandising -->

  <operation-menu id="storeLocationsOperationMenu">
      <toolbar-scope asset-area="storeLocations"
                     pane-id="browse"/>
      <operation-menu-item id="edit" />
      <operation-menu-item divider="true" />
      <operation-menu-item id="duplicate" />
      <operation-menu-item id="delete" />
      <operation-menu-item divider="true" />
      <operation-menu-item id="addToProject" />
      <operation-menu-item id="export" />
    </operation-menu>

  <operation-menu id="storeTextOperationMenu">
      <toolbar-scope asset-area="storeText"
                     pane-id="browse"/>
      <operation-menu-item id="edit" />
      <operation-menu-item divider="true" />
      <operation-menu-item id="move"/>
      <operation-menu-item id="duplicate" />
      <operation-menu-item id="delete" />
      <operation-menu-item divider="true" />
      <operation-menu-item id="addToProject" />
      <operation-menu-item id="export" />
    </operation-menu>

  <operation-menu-adjustments id="promoContentMediaOpMenuAdjustments"
        asset-type="/atg/commerce/catalog/MerchandisingProductCatalog:promotionalContent">
    <disable-menu-item menu-item-id="viewChildren"/>
  </operation-menu-adjustments>

</toolbar>
