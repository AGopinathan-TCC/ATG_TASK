<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<!DOCTYPE portal-manifest PUBLIC "-//Art Technology Group, Inc.//DTD Portal Manifest//EN" "http://www.atg.com/dtds/portal/framework/portal_manifest_1.0.dtd">

<portal-manifest name="Hello World Example" version="1.0" author="ATG Portal Team">

  <gear-definitions>
    <gear-definition name="Hello World" version="1.0" author="ATG Portal Team">
      <description>An example gear</description>

      <servlet-context>/gear/helloworld</servlet-context>

      <dimensions>
        <dimension name="height">noPreference</dimension>
        <dimension name="width">noPreference</dimension>
      </dimensions>

      <gear-modes>

        <gear-mode name="content">
          <display-modes>
            <display-mode name="shared">
              <device-output name="html">/html/sharedHelloWorld.jsp</device-output>
              <device-output name="wml">/wml/sharedHelloWorld.jsp</device-output>
              <device-output name="chtml">/chtml/sharedHelloWorld.jsp</device-output>
            </display-mode>
            <display-mode name="full">
              <device-output name="html">/html/fullHelloWorld.jsp</device-output>
              <device-output name="wml">/wml/fullHelloWorld.jsp</device-output>
              <device-output name="chtml">/chtml/fullHelloWorld.jsp</device-output>
            </display-mode>
          </display-modes>
        </gear-mode>

        <gear-mode name="about">
          <display-modes>
            <display-mode name="shared">
              <device-output name="html">/html/aboutHelloWorld.jsp</device-output>
              <device-output name="wml">/wml/aboutHelloWorld.jsp</device-output>
              <device-output name="chtml">/chtml/aboutHelloWorld.jsp</device-output>
            </display-mode>
            <display-mode name="full">
              <device-output name="html">/html/aboutHelloWorld.jsp</device-output>
              <device-output name="wml">/wml/aboutHelloWorld.jsp</device-output>
              <device-output name="chtml">/chtml/aboutHelloWorld.jsp</device-output>
            </display-mode>
          </display-modes>
        </gear-mode>

      </gear-modes>
    </gear-definition>

  </gear-definitions>
</portal-manifest>
