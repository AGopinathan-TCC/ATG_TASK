<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE gsa-template PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN" "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<!--This file was generated by the ATG Repository Editor plugin-->
<gsa-template>
  <header>
    <name>SearchAdminRepository</name>
    <author>SanjayaR</author>
  </header>
  
  <!-- SearchProject -->
  <item-descriptor name="searchProject" default="true" content="false"
    folder="false" use-id-for-path="false" hidden="false" expert="false"
    writable="true" cache-mode="distributed" id-separator=":">
    
    <!-- top level object -->
    <table name="srch_project" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>

      <!-- This is the "abstract" model of the index. It is never
        actually built directly. -->
      <property name="index" column-names="srch_idx_id" item-type="searchIndex"
        required="false"
        repository="/atg/search/routing/repository/SearchConfigurationRepository"/>

      <!-- The current actually built index. This is what serves as
        the basis for the next incremental index. -->
      <property name="currentIndex" column-names="cur_srch_idx_id" item-type="searchIndex"
        required="false"
        repository="/atg/search/routing/repository/SearchConfigurationRepository"/>
      <property name="name" column-names="name" data-type="string" required="false"
        readable="true" writable="true" queryable="true" hidden="false"
        expert="false" cache-mode="inherit"/>
      <property name="description" column-names="description" data-type="string"
        required="false" readable="true" writable="true" queryable="true"
        hidden="false" expert="false" cache-mode="inherit"/>
      <property name="minInactiveIndexes" column-names="min_inact_idxs"
        data-type="int" required="false"/>
      <property name="nMostRecentlySync" column-names="preserve_cnt"
        data-type="int" required="false"/>
      <property name="syncLastnDays" column-names="preserve_age" data-type="int"
        required="false"/>
      <property name="extraConfig" column-names="srch_adv_c_id"
        item-type="extraConfig" required="false" readable="true" writable="true"
        queryable="true" hidden="false" expert="false" cache-mode="inherit"/>
      <property name="forceFullIndex" column-name="force_full_index"
        data-type="boolean"/>
      <property name="cachedCustomizations" column-names="cached_cust"
        data-type="binary" required="false" />
      <property name="noContent" column-names="no_content" 
        data-type="boolean" required="true" default="false"/>
    </table>
    
    <table name="srch_env_p_m" type="multi" id-column-name="srch_project_id">
      <property name="searchEnvironments" column-names="search_env_id"
        data-type="set" component-item-type="searchEnvironment"
        cache-mode="disabled"
        repository="/atg/search/routing/repository/SearchConfigurationRepository"/>
    </table>
    
    <table name="srch_env_sorg_m" type="multi" id-column-name="srch_project_id">
      <property name="secureOrganizations" column-names="secure_org_id"
        data-type="set" component-item-type="secureOrganization"/>
    </table>
    
    <table name="srch_project_custom_dsm" type="multi" id-column-name="srch_project_id"
      multi-column-name="idx">
      <property name="customizationDataSelections"
        column-names="srch_project_custom_ds_id" data-type="list"
        component-item-type="projectCustomizationDataSelection"/>
    </table>


    <table name="srch_css_id_to_targ_ids" type="multi" id-column-name="srch_project_id" multi-column-name="srch_content_ss_id">
       <!-- This is a map going from Content Source (Set) to the index -->
       <!-- ID and shared logical partition id that content source -->
       <!-- last updated. It is used by content adapters so they can -->
       <!-- know the ID of the index and LP they last updated. -->
      <property name="sharedContentSourceIdToTargetIds" data-type="map" component-item-type="contentSourceTargetIds" cascade="update,delete" column-name="id">
      </property>
    </table>

  </item-descriptor>
  
  <item-descriptor name="secureOrganization" content="false" folder="false"
    use-id-for-path="false" hidden="false" expert="false" writable="true"
    cache-mode="distributed" id-separator=":">
    <table name="srch_sorg" type="primary" id-column-name="id">
      <property name="id" column-name="id" data-type="string" required="true"/>
      <property name="name" column-name="name" data-type="string" required="false"/>
      <property name="parent" column-name="parent" item-type="secureOrganization"
        required="false"/>
    </table>
    
    <table name="srch_env_sorg_m" type="multi" id-column-name="secure_org_id">
      <property name="searchProjects" column-names="srch_project_id" data-type="set"
        component-item-type="searchProject"/>
    </table>
  </item-descriptor>
  
  <item-descriptor name="contentSourceAdapter" content="false" folder="false"
    use-id-for-path="false" hidden="false" expert="false" writable="true"
    cache-mode="distributed" id-separator=":">
    <!-- top level object -->
    <table name="srch_content" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="name" column-names="name" data-type="string" required="true"/>
      <property name="parent" column-names="srch_content_id"
        item-type="contentSourceAdapter" required="false"/>
      <property name="handlingService" column-names="handservice"
        data-type="string" required="false"/>
      <property name="extraConfig" column-names="srch_adv_c_id"
        item-type="extraConfig" required="false" readable="true" writable="true"
        queryable="true" hidden="false" expert="false" cache-mode="inherit"/>
    </table>
    
  </item-descriptor>



  <item-descriptor name="contentSourceTargetIds" cache-mode="distributed">
    <!-- A container for the last updated index and logicalPartition -->
    <!-- for a given content source. -->
    <table name="srch_css_id_to_targ_ids" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="indexId" column-names="srch_idx_id" data-type="string" required="true"/>
      <property name="searchProject" column-names="srch_project_id" item-type="searchProject" required="true"/>
      

      <property name="sharedLogicalPartitionId" column-names="srch_shared_lp_id" data-type="string" required="true"/>

      <property name="sharedContentSourceId" column-names="srch_content_ss_id" data-type="string" required="true"/>

    </table>
  </item-descriptor>

  <!--selection between an project / index / partition and contentsource's output, by type.( Content, Topic, xyzzy )
  {{xPos:1169,yPos:-34}}-->
  <item-descriptor name="contentSource" content="false" folder="false"
    use-id-for-path="false" hidden="false" expert="false" writable="true"
    cache-mode="distributed" id-separator=":">
    
    <table name="srch_content_ss" type="primary" id-column-names="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="sharedId" column-names="shared_id" data-type="string" required="true"/>
      <property name="name" column-names="name" data-type="string"
        required="false"/>
      <property name="parent" column-names="srch_content_ss_id"
        item-type="contentSource" required="false"/>
      <property name="lastModified" column-names="last_modified" data-type="timestamp"
        required="false"/>
      <property name="contentSourceAdapter" column-names="srch_content_id"
        item-type="contentSourceAdapter" required="true" readable="true" writable="true"
        queryable="true" hidden="false" expert="false" cache-mode="inherit"/>
      <property name="type" column-names="structured" data-type="enumerated"
        required="false">
        <attribute name="useCodeForValue" value="false"/>
        <option value="structured" code="13000"/>
        <option value="unstructured" code="13010"/>
      </property>
      <property name="parentLogicalPartition" column-names="srch_log_part_id"
        item-type="logicalPartition"
        repository="/atg/search/routing/repository/SearchConfigurationRepository"/>
      <property name="forceContentType" column-name="force_con_type"
        data-type="boolean"/>
      
      <property name="docSetSubPath" column-name="doc_set_subpath"
        data-type="string"/>
      
      <property name="ExtraConfig" column-names="srch_adv_c_id"
        item-type="extraConfig" required="false" readable="true" writable="true"
        queryable="true" hidden="false" expert="false" cache-mode="inherit"/>
      
    </table>
    
    <table name="srch_content_ss_mm" type="multi" id-column-names="srch_content_ss_id">
      <property name="members" column-names="members" data-type="set"
        component-data-type="string" required="false" readable="true"
        writable="true" queryable="true" hidden="false" expert="false"
        cache-mode="inherit"/>
    </table>
    
    <table name="srch_css_custom_dsm" type="multi" id-column-name="srch_content_ss_id"
      multi-column-name="idx">
      <property name="customizationDataSelections"
        column-names="srch_csscust_ds_id" data-type="list"
        component-item-type="contentSourceSetCustomizationDataSelection"/>
    </table>
  </item-descriptor>
  
  <item-descriptor name="baseCustomizationDataSelection"
    sub-type-property="selectionType" content="false" folder="false"
    use-id-for-path="false" hidden="false" expert="false" writable="true"
    cache-mode="distributed" id-separator=":">
    
    <table name="srch_custom_ds" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="sharedId" column-names="shared_id" data-type="string" required="true"/>
      <property name="selectionType" column-names="select_type"
        data-type="enumerated" writable="false">
        <attribute name="useCodeForValue" value="false"/>
        <option value="baseCustomizationDataSelection" code="13000"/>
        <option value="projectCustomizationDataSelection" code="13010"/>
        <option value="contentSourceSetCustomizationDataSelection" code="13020"/>
        <option value="syncTaskCustomizationDataSelection" code="13030"/>
      </property>
      <property name="contentSourceAdapter" column-names="srch_content_id"
        item-type="contentSourceAdapter" required="true" readable="true" writable="true"
        queryable="true" hidden="false" expert="false" cache-mode="inherit"/>
      
      <property name="extraConfig" column-names="srch_adv_c_id"
        item-type="extraConfig" required="false" readable="true" writable="true"
        queryable="true" hidden="false" expert="false" cache-mode="inherit"/>

      <!--Topic|Term|Whatever| a different selection for each type.  See atg.search.adapter.customization.CustomizationType enum for valid values -->
      <property name="customizationDataType" column-names="custom_dt" data-type="string" required="true"/>
    </table>
    
    <table name="srch_custom_ds_mm" type="multi" id-column-names="srch_custom_ds_id"
      multi-column-name="idx">
      
      <!--members - based on what is published from the selected adapter{{xPos:1081,yPos:368}}-->
      <property name="members" column-names="sub" data-type="list"
        component-data-type="string" required="false" readable="true"
        writable="true" queryable="true" hidden="false" expert="false"
        cache-mode="inherit"/>
    </table>
    
  </item-descriptor>
  
  <item-descriptor name="projectCustomizationDataSelection"
    super-type="baseCustomizationDataSelection"
    sub-type-value="projectCustomizationDataSelection"
    cache-mode="distributed" >
    <table name="srch_project_custom_ds" type="auxiliary" id-column-name="id">
      <property name="project" column-names="srch_project_id"
        item-type="searchProject" required="false"/>
    </table>
  </item-descriptor>
  
  <item-descriptor name="syncTaskCustomizationDataSelection"
    super-type="baseCustomizationDataSelection"
    sub-type-value="syncTaskCustomizationDataSelection"
    cache-mode="distributed" >
  </item-descriptor>
  
  <item-descriptor name="contentSourceSetCustomizationDataSelection"
    super-type="baseCustomizationDataSelection"
    sub-type-value="contentSourceSetCustomizationDataSelection"
    cache-mode="distributed">
    <table name="srch_css_custom_ds" type="auxiliary" id-column-name="id">
      <property name="contentSource" column-names="srch_content_ss_id"
        item-type="contentSource" required="false" readable="true"
        writable="true" queryable="true" hidden="false" expert="false"
        cache-mode="inherit"/>
    </table>
  </item-descriptor>
  
  <item-descriptor name="extraConfig" content="false" folder="false"
    use-id-for-path="false" hidden="false" expert="false" writable="true"
    cache-mode="distributed" id-separator=":">
    
    <table name="srch_adv_conf" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <!--bigstring{{xPos:1162,yPos:688}}-->
      <property name="configuration" column-names="conf" data-type="big string"
        required="false" readable="true" writable="true" queryable="true"
        hidden="false" expert="false" cache-mode="inherit"/>
    </table>
    
  </item-descriptor>
  
  <item-descriptor name="historyData" cache-mode="distributed">
    <table name="srch_history" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      
      <!-- The assumption is that for display MB will be the "unit" of measure,
      but since we will be dealing with fractions of a MB, size should be
      stored in units of Kilobytes. -->
      <property name="realPartitionSize" column-names="act_part_size"
        data-type="int" required="false"/>
      <property name="contentItemCount" column-names="item_count" data-type="int"
        required="false"/>
      
      <property name="startTime" column-names="start_time" data-type="timestamp"
        required="false"/>
      <property name="endTime" column-names="end_time" data-type="timestamp"
        required="false"/>
      <property name="successfulCompletion" column-names="succeeded"
        data-type="boolean" required="false"/>
      
    </table>
    <table name="srch_hist_stepm" type="multi" id-column-names="srch_history_id"
      multi-column-name="idx">
      <property name="syncStepStatuses" column-names="srch_hist_step_id"
        data-type="list" component-item-type="syncStepStatus"/>
    </table>
  </item-descriptor>
  
  
  <!-- IndexVersion  - platform, version, charsize - for selecting the search engine -->
  <!-- This is NOT related to sync. Its related to Platform / ReleaseVersion -->
  <!-- Used to support mixed platform from the same Admin -->
  <item-descriptor name="indexVersion" cache-mode="distributed">
    
    <table name="srch_act_idx_v" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="platform" column-names="srch_platform_id"
        item-type="platform" required="false"/>
      <property name="majorVersion" column-names="majorversion" data-type="long"
        required="false"/>
      <property name="minorVersion" column-names="minorversion" data-type="long"
        required="false"/>
      <property name="charSize" column-names="charsize" data-type="int"
        required="false"/>
    </table>
    
  </item-descriptor>
  
  <item-descriptor name="platform">
    
    <table name="srch_platform" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="platformId" column-names="platformid" data-type="long"
        required="false"/>
      <property name="maxPartitionSize" column-names="maxpartsize" data-type="long"
        required="false"/>
    </table>
    
  </item-descriptor>
  
  <!-- lookup table for impl classes -->
  <item-descriptor name="registeredImplementation">
    
    <table name="srch_reg_impl" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="interface" column-names="intface" data-type="string"
        required="false"/>
      <!-- primary interface this class is registered for -->
      <property name="className" column-names="classname" data-type="string"
        required="false"/><!-- classname of impl class ! -->
      <property name="classLoader" column-names="classloader" data-type="string"
        required="false"/><!-- support custom classloaders -->
      <property name="Name" column-names="name" data-type="string"
        required="false"/> <!-- friendly name -->
      <property name="Description" column-names="description" data-type="string"
        required="false"/><!-- informative description-->
    </table>
    
  </item-descriptor>
  
  <!-- Synchronization Config -->
  <!--
  Add/Remove Partition -
  when you add or remove a partition, you must create a synctask with this type, and pass into create of a tracking status
  Revert Index -
  redeploys an older version of an index.
  
  -->
  <item-descriptor name="baseSyncTask" cache-mode="distributed"
      sub-type-property="baseType" sub-type-value="baseSyncTask">
    <table name="srch_base_sync_task" type="primary" id-column-name="id">
      <property name="id" column-name="id" data-type="string" required="true"/>
      <property name="baseType" column-names="base_type" data-type="enumerated" required="true">
        <attribute name="useCodeForValue" value="false"/>
        <option value="baseSyncTask" code="13000"/>
        <option value="syncTask" code="13010"/>
      </property>
      <property name="taskType" column-name="type_id" item-type="syncTaskType" required="true"/>
      <property name="subname" column-name="subname" data-type="string" required="false"/>
      <property name="extraConfig" column-names="srch_adv_c_id"
        item-type="extraConfig" required="false" readable="true" writable="true"
        queryable="true" hidden="false" expert="false" cache-mode="inherit"/>
      <property name="includeAllContentSources" column-names="is_all_css" data-type="boolean" required="false" default="true"/>
      <property name="includeAllCustomData" column-names="is_all_custom_data" data-type="boolean" required="false" default="true"/>
      <property name="pauseIndexing" column-names="is_pause" data-type="boolean" required="true" default="false"/>
      
      <!-- searchProject property denormalized into srch_sync_task and srch_sync_task_def instead of srch_base_sync_task for query performance -->
      <property name="searchProject" column-name="srch_project_id" item-type="searchProject" required="true">
        <attribute name="removeNullValues" value="true"/>
      </property>
      
      <!-- The source search index. Typically null (meaning the -->
      <!-- project's current index), only set when deploying -->
      <!-- a historical index. No foreign key constraint by intention -->
      <property name="sourceIndex" column-name="src_srch_idx_id" required="false" item-type="searchIndex"
                repository="/atg/search/routing/repository/SearchConfigurationRepository">
        <attribute name="removeNullValues" value="true"/>
      </property>

    </table>
    
    <table name="srch_sync_content_ss_m" type="multi" id-column-name="sync_task_id">
      <property name="contentSourceSetSelections" column-names="content_ss_id"
        required="false" component-item-type="contentSource"
        data-type="Set"/>
    </table>
    <table name="srch_sync_lp_m" type="multi" id-column-name="sync_task_id">
      <property name="logicalPartitions" column-names="log_part_id"
        required="false" component-item-type="logicalPartition"
        repository="/atg/search/routing/repository/SearchConfigurationRepository"
        cache-mode="disabled"
        data-type="Set"/>
    </table>
    <table name="srch_sync_task_custom_ds" type="multi" id-column-name="srch_sync_task_id">
      <property name="customDataSelections" column-names="id"
        required="false" component-item-type="syncTaskCustomizationDataSelection"
        cascade="insert,update,delete" data-type="Set"/>
    </table>
    <table name="srch_sync_env_m" type="multi" id-column-name="sync_task_id">
      <property name="searchEnvironmentSelections" column-names="search_env_id"
        required="false" component-item-type="searchEnvironment"
        repository="/atg/search/routing/repository/SearchConfigurationRepository"
        cache-mode="disabled"
        data-type="Set"/>
    </table>    
    <!-- Defines the steps in this task including which option the admin chose for each step -->
    <table name="srch_sync_task_step_m" type="multi" id-column-name="task_id"
      multi-column-name="idx">
      <property name="syncSteps" cascade="insert,update,delete"
        column-names="step_id" data-type="list"
        component-item-type="baseSyncStep"/>
    </table>
  </item-descriptor>
  
  <item-descriptor name="syncTask" cache-mode="distributed" 
      super-type="baseSyncTask"
      sub-type-value="syncTask">
    <table name="srch_sync_task" type="auxiliary" id-column-name="id">
      <property name="baseSyncTaskId" column-name="base_sync_task_id" required="true"/>
      <property name="errorCount" column-name="error_count" data-type="int" required="false"/>
      <!-- The instance of the search index for this synchronization task -->
      <property name="index" column-name="index_id" required="false" item-type="searchIndex"
                repository="/atg/search/routing/repository/SearchConfigurationRepository">
        <attribute name="removeNullValues" value="true"/>
      </property>
      <property name="startTime" column-name="start_tstamp" data-type="timestamp" required="true"/>
      <property name="endTime" column-name="end_tstamp" data-type="timestamp" required="false"/>      
    </table>
    <table name="srch_audit" type="multi" id-column-name="srch_sync_task_id" multi-column-name="el_name">
      <property name="auditData" column-names="id" data-type="map" component-item-type="auditDataElement"/>
    </table>
  </item-descriptor>
  
  <!-- Defines a manual or automated synchronization task - defined by the admin -->
  <item-descriptor name="syncTaskDefinition" cache-mode="distributed">
    <table name="srch_sync_task_def" type="primary" id-column-name="id">
      <property name="id" column-name="id" data-type="string" required="true"/>
      <property name="baseSyncTask" column-name="base_sync_task_id" item-type="baseSyncTask" required="true"/>
      <property name="lastModified" column-name="last_modified" data-type="timestamp" required="false"/>
      <property name="description" column-name="description" data-type="string" required="false"/>
      <property name="enabled" column-name="enabled" data-type="boolean" required="false"/>
      <property name="schedule" column-name="schedule" data-type="string" required="false"/>
      <property name="caDeploymentType" column-names="depl_type" data-type="string" required="false"/>
      <property name="caDeploymentTarget" column-name="depl_target" data-type="string" required="false"/>
    </table>
  </item-descriptor>
  
  <!-- Defines the steps in a task and the valid options for each step - these ship OOTB -->
  <item-descriptor name="syncTaskType" cache-mode="distributed">
    <table name="srch_sync_task_type" type="primary" id-column-name="id">
      <property name="id" column-name="id" data-type="string" required="true"/>
      <property name="name" column-name="name" data-type="string" required="true"/>
      <property name="enum" column-name="enum" data-type="enumerated" required="true">
        <attribute name="useCodeForValue" value="false"/>
        <option code="13010" value="complete"/>
        <option code="13020" value="incremental"/>
        <option code="13030" value="custom"/>
        <option code="13040" value="harvest_only"/>
        <option code="13050" value="apply_post_index_customization_only"/>
        <option code="13060" value="deploy_only"/>
        <option code="13070" value="estimate_index_size"/>
        <option code="13080" value="test"/>
        <option code="13090" value="push_customization_real_time"/>
        <option code="13100" value="add_remove_partition"/>
        <option code="13110" value="revert_index"/>
        <option code="13120" value="deploy_historical"/>
        <option code="13130" value="apply_pre_index_customization_only"/>
        <option code="13140" value="full_selected_content"/>
      </property>
    </table>
        
    <!-- Defines the sync steps involved in this task type -->
    <table name="srch_sync_task_type_step_m" type="multi" id-column-name="task_type_id"
      multi-column-name="idx">
      <property name="syncSteps"
        column-names="step_type_id" data-type="list"
        component-item-type="syncStepType" required="true"/>
    </table>      
  </item-descriptor>
  
  <item-descriptor name="baseSyncStep" cache-mode="distributed"
        sub-type-property="baseType">
    <table name="srch_base_sync_step" type="primary" id-column-name="id">
      <property name="id" column-name="id" data-type="string" required="true"/>
      <property name="baseType" column-names="base_type" data-type="enumerated" required="true">
        <attribute name="useCodeForValue" value="false"/>
        <option value="syncStepDefinition" code="13000"/>
        <option value="syncStepStatus" code="13010"/>
      </property>
      <!-- reference to the parent step defintion -->
      <property name="syncStepType" column-name="step_type_id" item-type="syncStepType" required="true"/>
      <!-- Defines which option the admin selected for a step in a sync task definition -->
      <property name="stepOption" column-name="step_option_id" item-type="syncStepOption" required="true"/>
    </table>
  </item-descriptor>
  
  <!-- Records the error count, completion date, etc. of an executed sync step -->
  <item-descriptor name="syncStepStatus"
    super-type="baseSyncStep"
    sub-type-value="syncStepStatus">
    <table name="srch_hist_step" type="auxiliary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <!-- reference to the step defintion -->
      <property name="syncStepDefinition" column-name="step_definition_id" item-type="syncStepDefinition" required="false"/>
      <property name="status" column-names="status_id" data-type="enumerated" required="true">
        <attribute name="useCodeForValue" value="false"/>
        <option code="13010" value="NotStarted"/>
        <option code="13020" value="InProgress"/>
        <option code="13030" value="Succeeded"/>
        <option code="13040" value="Failed"/>
        <option code="13050" value="Cancelled"/>
        <option code="13060" value="Skipped"/>
        <option code="13070" value="WaitingOnUserInput"/>
      </property>
      <property name="errorCount" column-names="error_count" data-type="int" required="true"/>
      <property name="startTime" column-names="start_time" data-type="timestamp" required="false"/>
      <property name="endTime" column-names="end_time" data-type="timestamp" required="false"/>
    </table>
    <table name="srch_step_error" type="multi" id-column-name="hist_step_id">
      <property name="errors" column-names="id"
        required="false" component-item-type="syncStepStatusError"
        data-type="Set"/>
    </table>
  </item-descriptor>


  <!-- Records the error count, completion date, etc. of an executed sync step -->
  <item-descriptor name="syncStepStatusError">
    <table name="srch_step_error" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <!-- reference to the sync step status -->
      <property name="syncStepStatus" column-name="hist_step_id" item-type="syncStepStatus" required="false"/>
      <property name="occurredTime" column-names="occurred_time" data-type="timestamp" required="true">
        <attribute name="propertySortPriority" value="1"/>
      </property>
      <property name="contentId" column-names="content_id" data-type="string" required="false"/>
      <property name="type" column-name="error_type" data-type="enumerated" required="true">
        <attribute name="useCodeForValue" value="false"/>
        <option code="13010" value="fatalError"/>
        <option code="13020" value="contentError"/>
        <option code="13030" value="customizationError"/>
      </property>
      <property name="errorMessage" column-names="error_message" data-type="string" required="false"/>
      <property name="cause" column-names="cause" data-type="string" required="false"/>
      <property name="response" column-names="engine_resp" data-type="string" required="false"/>
    </table>
  </item-descriptor>

  
  <!-- Defines the configuration of a step in a sync task definition -->
  <item-descriptor name="syncStepDefinition" cache-mode="distributed"
    super-type="baseSyncStep"
    sub-type-value="syncStepDefinition">
  </item-descriptor>
  
  <!-- Defines the configuration of a step in a sync task definition - these ship OOTB -->
  <item-descriptor name="syncStepType" cache-mode="distributed">
    <table name="srch_sync_step_type" type="primary" id-column-name="id">
      <property name="id" column-name="id" data-type="string" required="true"/>
      <property name="name" column-name="name" data-type="string" required="true"/>
      <property name="enum" column-name="enum" data-type="enumerated" required="true">
        <attribute name="useCodeForValue" value="false"/>
        <option code="13010" value="harvest_step"/>
        <option code="13020" value="partition_step"/>
        <option code="13030" value="pre_index_customization_step"/>
        <option code="13040" value="content_step"/>
        <option code="13050" value="post_index_customization_step"/>
        <option code="13060" value="indexing_step"/>
        <option code="13070" value="deployment_step"/>
      </property>
      <!-- This is the "super type" of the step. These are the higher
           level steps users see on the status page.
      -->
      <property name="superStepEnum" column-name="super_step_enum" data-type="enumerated" required="true">
        <attribute name="useCodeForValue" value="false"/>
        <option code="13010" value="content_super_step"/>
        <option code="13020" value="indexing_super_step"/>
        <option code="13030" value="deployment_super_step"/>
      </property>
    </table>
    
    <!-- Defines the sync steps involved in this task type -->
    <table name="srch_sync_step_type_option_m" type="multi" id-column-name="step_type_id"
      multi-column-name="idx">
      <!-- Defines which options are valid for this step -->
      <property name="availableOptions"
        column-names="step_option_id" data-type="list"
        component-item-type="syncStepOption"/>
    </table>      
  </item-descriptor>
  
  <item-descriptor name="syncStepOption" cache-mode="distributed">
    <table name="srch_sync_step_option" type="primary" id-column-name="id">
      <property name="name" column-name="name" data-type="string" required="true"/>
      <property name="optionType" column-name="option_type" data-type="enumerated" required="true">
        <attribute name="useCodeForValue" value="false"/>
        <option code="13010" value="Harvest_HarvestContent"/>
        <option code="13020" value="Harvest_UseLocalContentIfAvailable"/>
        <option code="13030" value="Harvest_DoNotHarvest"/>
        <option code="13040" value="Partition_UseCleanPartition"/>
        <option code="13050" value="Partition_UseExistingPartition"/>
        <option code="13060" value="PreIndexCustomizations_LoadLatest"/>
        <option code="13070" value="PreIndexCustomizations_UseExisting"/>
        <option code="13080" value="Content_BuildIndex"/>
        <option code="13090" value="Content_UpdateIndex"/>
        <option code="13100" value="Content_DoNotIndex"/>
        <option code="13120" value="PostIndexCustomization_LoadLatest"/>
        <option code="13130" value="PostIndexCustomization_UseExisting"/>
        <option code="13140" value="Deployment_DeployIndex"/>
        <option code="13150" value="Deployment_DoNotDeployIndex"/>
        <option code="13160" value="Indexing_DefaultOption"/>
      </property>
    </table>        
  </item-descriptor>
  
  <item-descriptor name="externalContentItem">
    <table name="srch_file" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="contentSourceAdapter" column-names="srch_content_id"
        item-type="contentSourceAdapter" required="false"/>
      <property name="name" column-names="name" data-type="big string"
        required="false"/>
      <property name="namehash" column-names="namehash" data-type="string"
        required="true"/>
      <property name="timestamp" column-names="tstamp" data-type="string"
        required="false"/>
      <property name="generationNumber" column-names="gnumber" data-type="string"
        required="false"/>
    </table>
  </item-descriptor>
  
  <item-descriptor name="queuedTask">
    <table name="srch_queue" type="primary" id-column-name="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="baseSyncTaskId" column-name="base_sync_task_id" required="true" />
      <property name="qtime" column-names="qtime" data-type="timestamp" required="true"/>
    </table>
  </item-descriptor>

  <item-descriptor name="auditDataElement">
    <table name="srch_audit" type="primary" id-column-names="id">
      <property name="id" column-names="id" data-type="string" required="true"/>
      <property name="syncTask" column-names="srch_sync_task_id" item-type="syncTask" required="true"/>
      <property name="name" column-names="el_name" data-type="string" required="true"/>
      <property name="value" column-names="el_value" data-type="long" required="true"/>
    </table>
  </item-descriptor>

</gsa-template>
