<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<!DOCTYPE portal-manifest PUBLIC "-//Art Technology Group, Inc.//DTD Portal Manifest//EN" "http://www.atg.com/dtds/portal/framework/portal_manifest_1.0.dtd">

<portal-manifest name="Default Gear Title Templates" version="1.0" author="ATG Portal Team">

  <gear-title-templates>
 
    <gear-title-template name="Default Gear Title Template" version="1.0" author="ATG Portal Team">
      <description>A Default Gear Title Template</description>
      <servlet-context>/portal/layoutTemplates</servlet-context>
      <images>
        <image type="small">
          <url>/images/page_template.gif</url>
        </image>
      </images>
      <gear-title-template-modes>
        <gear-title-template-mode name="template">
           <display-modes>
             <display-mode name="full">
                <device-output name="html">/html/titlebar_template.jsp</device-output>
             </display-mode>
             <display-mode name="shared">
                <device-output name="html">/html/titlebar_template.jsp</device-output>
             </display-mode>
           </display-modes>
        </gear-title-template-mode>

        <gear-title-template-mode name="preTemplate">
           <display-modes>
             <display-mode name="full">
                <device-output name="html">/html/gear_pre_treatment.jsp</device-output>
             </display-mode>
             <display-mode name="shared">
                <device-output name="html">/html/gear_pre_treatment.jsp</device-output>
             </display-mode>
           </display-modes>
        </gear-title-template-mode>

        <gear-title-template-mode name="postTemplate">
           <display-modes>
             <display-mode name="full">
                <device-output name="html">/html/gear_post_treatment.jsp</device-output>
             </display-mode>
             <display-mode name="shared">
                <device-output name="html">/html/gear_post_treatment.jsp</device-output>
             </display-mode>
           </display-modes>
        </gear-title-template-mode>
      </gear-title-template-modes>

    </gear-title-template>

  </gear-title-templates>

</portal-manifest>
