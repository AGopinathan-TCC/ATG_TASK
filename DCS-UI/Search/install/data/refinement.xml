<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE gsa-template SYSTEM "dynamosystemresource:/atg/dtds/gsa/gsa_1.0.dtd">
<gsa-template>
<import-items>

<!-- ======================================================================= -->
<!-- Initial refinement data                                                 -->
<!-- ======================================================================= -->

<!-- Global Facet Node -->

<add-item item-descriptor="commerceRefineConfig" id="globalFacetsRC">
  <set-property name="refineConfigName"><![CDATA[Global Facets]]></set-property>
  <set-property name="isGlobal"><![CDATA[true]]></set-property>
  <set-property name="canChildrenInherit"><![CDATA[true]]></set-property>
  <set-property name="canInheritFromGlobal"><![CDATA[true]]></set-property>
</add-item>

<!-- ======================================================================= -->
<!-- Initial search config data                                                 -->
<!-- ======================================================================= -->

<!-- Root Dimension Tree Info for merchandising application -->

<add-item item-descriptor="dimensionTreeInfo" id="merchDimensionTreeRoot">
  <set-property name="displayName"><![CDATA[Merchandising Search Root]]></set-property>
  <set-property name="application"><![CDATA[Merchandising]]></set-property>
</add-item>

</import-items>
</gsa-template>
