<?xml version="1.0" encoding="UTF-8"?>
<portlet-app 
             xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" 
             version="1.0" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="portlet-app_1_0.xsd">

  <portlet>
    <description>A portlet which demonstrates integration with ATG Relationship Management.</description>
    <portlet-name>HelloWorldPortlet</portlet-name>
    <display-name>Hello World Portlet</display-name>

    <portlet-class>atg.portlet.DispatchPortlet</portlet-class>
    <init-param>
      <name>path</name>
      <value>/index.jsp</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
    </supports>    
    <portlet-info>
      <title>Hello World Portlet</title>
    </portlet-info>
  </portlet>

</portlet-app>
