<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE portal-manifest PUBLIC "-//Art Technology Group, Inc.//DTD Portal Manifest//EN" "http://www.atg.com/dtds/portal/framework/portal_manifest_1.0.dtd">
<portal-manifest author="ATG Portlet Deploy Tool" name="OutstandingRequestsPortlet" version="1.0" >
    <gear-definitions>
        <gear-definition name="OutstandingRequestsPortlet" version="1.0" author="ATG Portlet Deploy Tool">
            <description>Outstanding Requests portlet for ATG Biz UI.</description>
            <servlet-context>/PubPortlets</servlet-context>
            <dimensions>
                <dimension name="height">noPreference</dimension>
                <dimension name="width">narrow</dimension>
            </dimensions>
            <gear-modes>
                <gear-mode name="content">
                    <display-modes>
                        <display-mode name="full">
                            <device-output name="html">/OutstandingRequestsPortlet</device-output>
                        </display-mode>
                        <display-mode name="shared">
                            <device-output name="html">/OutstandingRequestsPortlet</device-output>
                        </display-mode>
                    </display-modes>
                </gear-mode>
            </gear-modes>
            <jps-portlet value="true">
                <portlet-guid value="portlets.war.OutstandingRequestsPortlet"/>
            </jps-portlet>
            <instance-parameters>
                <parameter name="path">
                    <default-value>/html/OutstandingRequestsPortlet/index.jsp</default-value>
                </parameter>
                <parameter name="atg.portlet-class">
                    <default-value>atg.portlet.DispatchPortlet</default-value>
                </parameter>
            </instance-parameters>
        </gear-definition>
    </gear-definitions>
</portal-manifest>
